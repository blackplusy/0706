	free
	init  		系统默认运行级别
		/etc/inittab
		init 0   关机
		init 3   进入到命令模式
		init 5   进入到图形模式
		init 6   重启
	chkconfig   开机启动列表
		chkconfig --list
			查看开机启动列表
		chkconfig --level 35 httpd on
			运行级别3和运行级别5apache随开机启动而启动
	mount
	umount      取消挂载
	rpm 
	yum
	su    切换用户
		su root
			切换到root用户里(不完全切换)
		su - root
			切换到root用户里(完全切换)
	tailf
		监控文件内容
		tailf /var/log/httpd/access_log
		监控apache的日志
